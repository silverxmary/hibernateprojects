<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="educacionit.clase3.localbroadcastmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="educacionit.clase3.localbroadcastmanager.LocalBroadcastManagerActivity"
            android:label="@string/title_activity_local_broadcast_manager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".StartedService"/>

        <receiver android:name=".LocalBroadcastManagerActivity$CounterBroadcastReceiver"/>
    </application>

</manifest>
